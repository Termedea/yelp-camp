<% include ../partials/header%>

<div class="container">
    
    <div class="row">
        <h1>Edit comment</h1>
            <div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4">
                <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id%>?_method=PUT" method="post">
                    <div class="form-group"><textarea class="form-control" type="text" name="comment[text]" placeholder="Comment"><%= comment.text %></textarea></div>
                    <div class="form-group"><input class="btn btn-primary btn-large btn-block" value="Save comment" type="submit"></div>
                </form>
                <a href="/campgrounds/<%= campground_id %>" class="btn btn-danger">Go back</a>
            </div><!--col-->
    </div><!--row-->
        
    </div>
</div>
<% include ../partials/footer%>