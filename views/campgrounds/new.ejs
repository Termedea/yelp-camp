<div class="container">
    
    <div class="row">
        <h1>Create a New Campground</h1>
            <div class="col-lg-offset-4 col-lg-4 col-md-offset-4 col-md-4">
                <form action="/campgrounds" method="post">
                    <div class="form-group"><input class="form-control" type="text" name="campground[name]" placeholder="Name"></div>
                    <div class="form-group"><input class="form-control" type="number" name="campground[price]" placeholder="Price" min="0.01" step="0.01"></div>
                    <div class="form-group"><input class="form-control" type="text" name="campground[image]" placeholder="Image"></div>
                    <div class="form-group"><textarea class="form-control" type="text" name="campground[description]" placeholder="Description"></textarea> </div>
                    <div class="form-group"><input class="btn btn-primary btn-large btn-block" value="Add new campsite" type="submit"></div>
                </form>
                <a href="/campgrounds" class="btn btn-danger">Go back</a>
            </div><!--col-->
    </div><!--row-->
        
    </div>
</div>
